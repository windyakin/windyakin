<ol class="articles">
  {% for article in articles %}
  <li class="articles-item">
    <div class="article-header">
      <time datetime="{{ article.date | dateString }}">{{ article.date | dateString }}</time>
      <ul class="tags" aria-hidden="true">
        {%- for tag in article.data.tags | tags %}
        <li>
          {%- set tagUrl %}/tags/{{ tag }}.html{% endset %}
          <a href="{{ tagUrl | url }}" class="tags-item">{{ tag }}</a>
        </li>
        {%- endfor %}
        {%- if article.data.externalUrl %}
        <li>
          <span class="tags-item">⚠️ 外部サイト</span>
        </li>
        {%- endif %}
      </ul>
    </div>
    <h3 class="article-title">
      {%- if article.data.externalUrl %}
      <a href="{{ article.data.externalUrl }}">{{ article.data.title }}</a>
      {%- else %}
      <a href="{{ article.url | url }}">{{ article.data.title }}</a>
      {%- endif %}
    </h3>
  </li>
  {% endfor %}
</ol>
